<section id="disclaimer">Disclaimer: This is a place to blog whatever is on your mind. I'm not responsible for any of
  the content on this page.
</section>
<section class="content">
  <% @posts.each do |post| %>
    <article>
      <h2><%= post.title %></h2>
      <div class="date"><%= pretty_date(post.created_at) %></div>
      <p><%= post.content %></p>
      <div class="tags">
        Tags: <% post.tags.each do |tag| %>
                <a href="/tag/<%=tag.id %>">#<%= tag.name %>&nbsp;</a> 
              <% end %>
      <div>
    </article>
  <% end %> 
</section>

